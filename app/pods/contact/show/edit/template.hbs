<div class="container-fluid box-shadow--8dp">
    <h2>Contact: {{model.json.contactId}}</h2>
    <form>
        {{input/md-input-text value=model.json.contactId
        placeholder="User assigned Contact ID" label="Contact ID"}}

        {{input/md-input-text value=model.json.organizationName
        placeholder="Organization Name" label="Organization Name"}}

        {{input/md-input-text value=model.json.individualName
        placeholder="Individual Name" label="Individual Name"}}

        {{input/md-input-text value=model.json.positionName
        placeholder="If Individual Name, provide Position" label="Position Name"}}

        <div class="panel panel-default box-shadow--8dp">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a data-toggle="collapse" href="#{{panelId}}a">Phones</a>
                    <button type="button"
                            class="btn btn-xs btn-success pull-right" {{action "addPhone" model.json.phoneBook}}>
                        <span class="fa fa-plus"></span> Add
                    </button>
                </h3>
            </div>
            <div id="{{panelId}}a" class="panel-collapse collapse">
                <div class="panel-body">
                    <table class="table table-striped table-hover fadeIn">
                        <thead>
                        <th>#</th>
                        <th>Name</th>
                        <th>Number</th>
                        <th>Services</th>
                        <th></th>
                        </thead>
                        <tbody>
                        {{#each model.json.phoneBook index="@index" as |phone index|}}
                            <tr>
                                <td>{{index}}</td>
                                <td>
                                    {{input/md-input-text value=phone.phoneName
                                    placeholder="Name or location or phone"}}
                                </td>
                                <td>
                                    {{input/md-input-text value=phone.phoneNumber
                                    placeholder="Phone number"}}
                                </td>
                                <td>
                                    <div class="form-group">
                                        {{multiselect-checkboxes options=phoneServices selection=phone.service}}
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-xs btn-danger pull-right" {{action "deletePhone" model.json.phoneBook index}}>
                                        <span class="fa fa-times"></span> Delete
                                    </button>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="panel panel-default box-shadow--8dp">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a data-toggle="collapse" href="#{{panelId}}b">Address</a>
                </h3>
            </div>
            <div id="{{panelId}}b" class="panel-collapse collapse">
                <div class="panel-body">
                    {{input/md-input-text-array model=model.json.address.deliveryPoint
                    placeholder="Address line" label="Address Lines"}}

                    {{input/md-input-text value=model.json.address.city
                    placeholder="City Name" label="City"}}

                    {{input/md-input-text value=model.json.address.adminsitrativeArea
                    placeholder="State or Province" label="State/Province"}}

                    {{input/md-input-text value=model.json.address.postalCode
                    placeholder="Zip or Postal Code" label="Postal Code"}}

                    {{input/md-input-text value=model.json.address.country
                    placeholder="Country Name" label="Country"}}
                </div>
            </div>
        </div>

        {{input/md-object-online-resource-array model=model.json propertyArrayName="onlineResource"
        label="Online Resource" attributes="name, uri" }}

        {{input/md-input-text value=model.json.contactInstructions
        placeholder="Supplemental Contact Instructions" label="Contact Instructions"}}

        <button type="submit" {{action "saveContact"}} class="btn btn-success">Submit</button>
        <button {{action "cancelContact"}} class="btn btn-warning">Cancel</button>
    </form>
    <br>
</div>
