<div class="form-group">
    {{#if label}}
        <label>{{label}}</label>
    {{/if}}
    <div class="form-group">
        {{bs-datetimepicker
        date=date
        format=format
        dateIcon="fa fa-calendar"
        icons=calendarIcons
        updateDate=(action (mut date))}}
    </div>
    {{yield}}
</div>
