{{#if label}}
    <div class="form-group">
        <label>{{label}}</label>
        <select class="form-control md-input-codelist-multiple" {{action 'setValue' on='change'}} multiple="multiple">
            <option></option>
            {{#each codelist as |code index|}}
                <option value={{code.codeName}} selected={{code.selected}}
                        data-tooltip={{code.description}}>{{code.codeName}}</option>
            {{/each}}
            {{yield}}
        </select>
    </div>
{{else}}
    <div class="form-group">
        <select class="form-control md-input-codelist-multiple" {{action 'setValue' on='change'}} multiple="multiple">
            <option></option>
            {{#each codelist as |code index|}}
                <option value={{code.codeName}} selected={{code.selected}}
                        data-tooltip={{code.description}}>{{code.codeName}}</option>
            {{/each}}
            {{yield}}
        </select>
    </div>
{{/if}}
