<div class="form-group border">
    <div class="form-group">
        {{#if label}}
            <label>{{label}}</label>
        {{/if}}
        <button {{action "addItem" items}} class="btn btn-success btn-xs pull-right"><span class="fa fa-plus"></span> Add Line</button>
        <table class="table table-striped table-hover">
            <thead>
            <th>#</th>
            <th class="col-sm-9">Address Line</th>
            <th></th>
            </thead>
            <tbody>
            {{#each items key="@index" as |inputItem index|}}
            <tr>
                <td>{{index}}</td>
                <td>
                    {{input/md-input-text
                    value=inputItem.val
                    maxlength=100
                    placeholder="Type address line"}}
                </td>
                <td>
                    <button {{action "deleteItem" items index}} class="btn btn-warning btn-xs pull-right">Delete!</button>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    {{yield}}
</div>
