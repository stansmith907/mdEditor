<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <a data-toggle="collapse" href="#{{panelId}}">{{label}}</a>
            <button type="button" class="btn btn-xs btn-success pull-right" {{action "addDate" model}}>
                <span class="fa fa-plus"></span> Add
            </button>
        </h3>
    </div>
    <div id="{{panelId}}" class="panel-collapse collapse">
        <div class="panel-body">
            <table class="table table-striped table-hover fadeIn">
                <thead>
                <th>#</th>
                <th class="col-sm-4">Date type</th>
                <th class="col-sm-4">Date</th>
                <th></th>
                </thead>
                <tbody>
                {{#each dateArray2 index="@index" as |dateObj index|}}
                    <tr>
                        <td>{{index}}</td>
                        <td>
                            {{input/md-input-codelist-single
                            value=dateObj.dateType
                            mdCodeName="dateType"
                            placeholder="Select date type"
                            tooltip=true
                            create=true}}
                        </td>
                        <td>
                            {{input/md-input-datetime
                            date=dateObj.date
                            format="YYYY-MM-DD"
                            placeholder="Enter date"}}
                        </td>
                        <td>
                            <button type="button" class="btn btn-xs btn-danger pull-right" {{action "deleteDate" dateArray2 index}}>
                                <span class="fa fa-times"></span> Delete
                            </button>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
